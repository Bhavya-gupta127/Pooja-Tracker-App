<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#BB1212">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/llrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="11dp">

            <ImageView
                android:id="@+id/pooja_img"
                android:layout_width="70dp"
                android:layout_height="70dp" />

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pooja_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja Name"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/pooja_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja description asdfdaf here"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/contentURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pooja url here"
                        android:textSize="10sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    >

                    <CheckBox
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                </LinearLayout>

        </RelativeLayout>

        </LinearLayout>


</androidx.cardview.widget.CardView>
    </LinearLayout>